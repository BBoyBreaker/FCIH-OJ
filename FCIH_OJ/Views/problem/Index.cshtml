@model IEnumerable<FCIH_OJ.Models.contestAndProblem.problem>

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<h2> Problems </h2>

<p>
    @Html.ActionLink("Create New", "Create", new { contestId=ViewBag.contestId }, new { target = "_balnk" })
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProblemDifficulty.difficultyLetter)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProblemType.type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contest.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProblemDifficulty.difficultyLetter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProblemType.type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contest.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id } , new {target = "_blank" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id } , new {target = "_blank" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id } , new {target = "_blank" })
        </td>
    </tr>
}

</table>
